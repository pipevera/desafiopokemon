<div class="well bs-component">
  <%= form_for(pokemon, html: {multipart: true, class: "form-horizontal"}) do |f| %>
    <% if pokemon.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(pokemon.errors.count, "error") %> prohibited this pokemon from being saved:</h2>

        <ul>
        <% pokemon.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :photo, class: "col-lg-2 control-label" %>
      <div class="col-lg-8">
        <%= f.file_field :photo %>
        <%= f.hidden_field :photo_cache %>
      </div>
      <%= image_tag(pokemon.photo, class: "img-responsive") if pokemon.photo? %>
    </div>

    <div class="form-group">
      <%= f.label :photo,"Url Foto" ,class:"col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.text_field :remote_photo_url, class: "form-control"  %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :name, class: "col-lg-2 control-label" %>
      <div class="col-lg-8">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :description, class: "col-lg-2 control-label" %>
      <div class="col-lg-8">
        <%= f.text_area :description, class: "form-control", rows: 5%>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= f.submit class: "btn btn-primary"%>
        <%= link_to 'Back', pokemons_path, class: "btn btn-info" %>
        <%= link_to('Show', pokemon, class: "btn btn-success" ) if params[:action] == 'edit' %>
      </div>
    </div>
  <% end %>
</div>
