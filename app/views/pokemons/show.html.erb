<div class="page-header">
  <h1>Detalles de <%= @pokemon.name %></h1>
</div>
<div class="well bs-component">
  <div class="form-horizontal">
    <div class="form-group">
      <div class="col-lg-4 col-lg-offset-4">
        <%= image_tag(@pokemon.photo, class: "img-responsive") if @pokemon.photo?%>
      </div>
    </div>

    <div class="form-group">
      <strong class= "col-lg-2 control-label">Name:</strong>
      <div class="col-lg-8">
        <p class= "form-control"><%= @pokemon.name  %></p>
      </div>
    </div>

    <div class="form-group">
      <strong class= "col-lg-2 control-label">Description:</strong>
      <div class="col-lg-8">
        <p class= "form-control"><%= @pokemon.description ? @pokemon.description : "-- Sin DescripciÃ³n --" %></p>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= link_to 'Back', pokemons_path, class: "btn btn-info" %>
        <%= link_to('Edit', edit_pokemon_path(@pokemon), class: "btn btn-warning") if can? :manage, @pokemon %>
      </div>
    </div>
  </div>

</div>

